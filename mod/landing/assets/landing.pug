doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title getme.click
    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Inter', sans-serif;
        background-color: #fff;
        color: #111;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        text-align: center;
      }

      .title-row {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
      }

      .title-row a.icon-link {
        text-decoration: none;
        font-size: 1.5rem;
        color: #00c896;
        transition: transform 0.2s ease;
      }

      .title-row a.icon-link:hover {
        transform: scale(1.2);
      }

      h1 {
        font-size: 3rem;
      }

      p {
        font-size: 1.25rem;
        color: #555;
        margin-bottom: 2.5rem;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.2rem;
        width: 100%;
        max-width: 800px;
      }

      .grid a {
        background-color: #f5f5f5;
        padding: 1.2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        color: #111;
        font-weight: 500;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        transition: background-color 0.2s ease, transform 0.2s ease;
      }

      .grid a:hover {
        background-color: #e6f8f3;
        transform: translateY(-3px);
      }

  body
    .title-row
      a.icon-link(href="/getting-started", title="Getting Started") 🚀
      h1 getme.click

    p Because things should be easier.

    .grid
      a(href="/stocks") 🛒 Manage Stocks
      a(href="/tools/url-shortener") 🔗 URL Shortener
      a(href="/tools/text-cleaner") 🧹 Text Cleaner
      a(href="/tools/json-prettifier") 📄 JSON Prettifier
      a(href="/tools/image-compressor") 🗜️ Image Compressor
      a(href="/tools/unit-converter") 📏 Unit Converter
      a(href="/tools/timezone-helper") 🌍 Timezone Helper

