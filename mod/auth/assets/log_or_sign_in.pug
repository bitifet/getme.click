extends /layout.pug

block append styles
    //- link(rel="stylesheet", href="/normform.min.css")

    //- title Authentication â€” getme.click
    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      .container {

          display: flex;
          flex-direction: column;
          align-items: center;
          padding: 2rem;

      }

      h1 {
        font-size: 2rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }

      p.description {
        font-size: 1rem;
        color: #555;
        text-align: center;
        margin-bottom: 2rem;
        max-width: 480px;
      }

      .form-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        width: 100%;
        max-width: 800px;
      }

      form {
        background: #fafafa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 360px;
      }

      label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
      }

      input {
        width: 100%;
        padding: 0.65rem;
        margin-bottom: 1.25rem;
        border: 1px solid #ccc;
        border-radius: 0.4rem;
        font-size: 1rem;
      }

      button {
        padding: 0.75rem;
        background-color: #00c896;
        color: white;
        border: none;
        border-radius: 0.4rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
      }

      .loginform button {
        width: 100%;
      }


      dialog#termsForm button {
        margin: 2em;
      }

      button:hover {
        background-color: #00a77c;
      }

      fieldset {
        text-align: right;
      }


block content
  .container
    .form-wrapper
      form.loginform(method="post", action=returnPath)
        input(type="hidden", name="mode", value="login")
        h1 Login
        label User name:
        input(type="text", name="username", placeholder="Username", required)
        label Password:
        input(type="password", name="password", placeholder="Password", required)
        button(type="submit") Login

      form#signUpForm.loginform(method="post", action=returnPath)
        input(type="hidden", name="mode", value="signup")
        h1 Sign Up
        label User name:
        input(type="text", name="username", placeholder="Choose a username", required)
        label Password:
        input(type="password", name="password", placeholder="Create a password", required)
        label Confirm Password:
        input(type="password", name="password_confirm", placeholder="Confirm your password", required)
        button#signUpBtn(type="submit") Sign Up

    dialog#termsForm
        include terms_and_conditions.pug
        fieldset
            button#dismissBtn(type="button") Dismiss
            button#acceptBtn(type="button") Accept

    script.
        const signUpForm = document.getElementById('signUpForm');
        const signUpBtn = document.getElementById('signUpBtn');
        const dialog = document.getElementById('termsForm');
        const confirmBtn = document.getElementById('acceptBtn');
        const cancelBtn = document.getElementById('dismissBtn');


        // Handle form submission


        let termsAccepted = false;


        function onSignupBtn (event) {
          if (termsAccepted) return;
          event.preventDefault();
          dialog.showModal();
        };
        signUpForm.addEventListener('submit', onSignupBtn);


        // Handle confirm button
        confirmBtn.addEventListener('click', () => {
          termsAccepted = true;
          // Close the dialog
          dialog.close();
          signUpBtn.click();
        });

        // Handle cancel button
        cancelBtn.addEventListener('click', () => {
          // Close the dialog
          dialog.close();
        });









