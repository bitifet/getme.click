      style.
        /* Reset and base styles */
        * {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }

        html, body {
          font-family: 'Inter', sans-serif;
          background-color: #fff;
          color: #111;
        }

        /* Body: center content and allow scrolling when content overflows */
        body {
          display: flex;
          flex-direction: column;
          justify-content: center;  /* Vertically center content when no scroll */
          align-items: center;
          padding: 2rem;
          min-height: 100vh;
          overflow: auto;  /* Allow scrolling when content exceeds viewport */
          width: 100vw;
          max-width: 1024px;
          margin: 0 auto;
        }

        /* Sticky navbar */
        .navbar {
          position: sticky;
          will-change: transform;
          top: 0;
          /* padding-top: calc(100vh - 100svh); */
          padding-top: 2rem;
          padding-bottom: 0px;
          z-index: 10;
          font-size: 1.25rem;
          display: flex;
          align-self: stretch;
          gap: 1rem;
        }
        .navbar::before {
            content: '';
            position: absolute;
            top: calc(45% + 1rem);
            bottom: calc(45% - 1rem);;
            left: 50%;
            transform: translateX(-50%);
            width: 100vw;
            background-color: #e0e0e0;
            background: linear-gradient(45deg, #11998e, #38ef7d);
            z-index: -1;
        }

        .navbar::after {
            content: '';
            position: absolute;
            top: 1rem;
            bottom: -.5rem;
            left: 50%;
            transform: translateX(-50%);
            width: 100vw;
            background-color: white;
            box-shadow: 0 3px 3px white;
            z-index: -2;
        }


        .navbar a {
          background-color: #f5f5f5;
          padding: 0.5rem 1rem;
          border-radius: 0.5rem;
          box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
          text-decoration: none;
          text-align: center;
          position: relative;
          display: inline-block;
        }

        .navbar a::before {
          content: '';
          position: absolute;
          top: 35%;
          bottom: 35%;
          left: -5px;
          right: -5px;
          background-color: white;
          z-index: -1;
        }

        .navbar a:hover {
          background-color: #e6f8f3;
          transform: translate(3px, 3px);
        }
        .navbar a:hover::before {
          position: relative;
          transform: translate(-3px, -3px);
        }

        /* Spacer inside navbar to push login/logout to the right */
        .navbar .spacer {
          flex-grow: 1;
        }

        /* Title row */
        .title-row {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          gap: 0.75rem;
          margin-bottom: 1rem;
          flex: 1;
          max-height: 25vh;
          overflow: visible;
        }
        
        .page-content {
          flex: 1;
          max-width: 100%;
          margin: 2em 1em;
        }

        h1 {
          font-size: 3rem;
        }
        heading h1 {
          font-size: 8vw;
          font-weight: 500;
        }

        /* Ensure block content doesn't squish */
        .page-content {
          align-self: normal;
        }


        .subtitle {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 1.25rem;
            color: #555;
            margin-bottom: 2.5rem;
            text-align: center;
            text-wrap: balance;
        }

        footer {
            margin-top: 4rem;
            text-align: center;
            font-size: 0.9rem;
            color: #aaa;
        }

        .navLinks li {
            list-style: none;
            margin: 0.5rem 0;
            display: inline;
        }

