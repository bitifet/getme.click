    meta(name="viewport", content="initial-scale=1")
    title #{title || "getme.click"}
    block styles
      style.
        /* Reset and base styles */
        * {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }

        html, body {
          min-height: 100%;
          font-family: 'Inter', sans-serif;
          background-color: #fff;
          color: #111;
        }

        /* Body: center content and allow scrolling when content overflows */
        body {
          display: flex;
          flex-direction: column;
          justify-content: center;  /* Vertically center content when no scroll */
          align-items: center;
          padding: 2rem;
          text-align: center;
          min-height: 100vh;
          overflow: auto;  /* Allow scrolling when content exceeds viewport */
        }

        /* Sticky navbar */
        .navbar {
          position: sticky;
          top: 0;
          z-index: 10;
          font-size: 1.25rem;
          display: flex;
          align-self: stretch;
          gap: 1rem;
        }

        .navbar a {
          background-color: #f5f5f5;
          padding: 0.5rem 1rem;
          margin-bottom: 2rem;
          border-radius: 0.5rem;
          box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        /* Spacer inside navbar to push login/logout to the right */
        .navbar .spacer {
          flex-grow: 1;
        }

        /* Title row */
        .title-row {
          display: flex;
          align-items: center;
          gap: 0.75rem;
          margin-bottom: 1rem;
        }

        .title-row a.icon-link {
          text-decoration: none;
          font-size: 1.5rem;
          color: #00c896;
          transition: transform 0.2s ease;
        }

        .title-row a.icon-link:hover {
          transform: scale(1.2);
        }

        h1 {
          font-size: 3rem;
        }

        /* Optional: ensure block content doesn't squish */
        .block-content, .content, block {
          width: 100%;
          max-width: 800px;
        }


