doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0 viewport-fit=cover")
    title #{title || "getme.click"}
    block styles
      link(rel="stylesheet", href="/vanilla.css")
      link(rel="stylesheet", href="/layout.css")

  body
    heading.title-row
        h1 getme.click
        p.subtitle
            span —
            block subtitle
                span Because things should be easier
            span —
    p.navbar
       a(href='/') 🏠 Home
       span.spacer
       if (user === null)
           /// Don't render log-in button
       else if (user)
           a(href='/logout') 🔒 Log&nbsp;out
       else
           a(href='/login') 🔑 Log&nbsp;in  
       a(href='/about') ❓ About
  
    div.page-content
        if (navLinks && navLinks.length > 0)
            ul.navLinks
                each link in navLinks
                    li: a(href=baseUrl + link.path) #{link.icon || ''} #{link.name}
        block title
            if (title)
                h2=title
        block content

    footer
      | &copy; #{new Date().getFullYear()} getme.click
