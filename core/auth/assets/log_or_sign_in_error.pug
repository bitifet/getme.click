extends /layout.pug

block append styles
    //- link(rel="stylesheet", href="/normform.min.css")

    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      .container {

          display: flex;
          flex-direction: column;
          align-items: center;
          padding: 2rem;

      }

      h1 {
        font-size: 2rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }

      p.description {
        font-size: 1rem;
        color: #555;
        text-align: center;
        margin-bottom: 2rem;
        max-width: 480px;
      }

      .form-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        width: 100%;
        max-width: 800px;
      }

      form {
        background: #fafafa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 360px;
      }

      label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
      }

      input {
        width: 100%;
        padding: 0.65rem;
        margin-bottom: 1.25rem;
        border: 1px solid #ccc;
        border-radius: 0.4rem;
        font-size: 1rem;
      }

      button {
        width: 100%;
        padding: 0.75rem;
        background-color: #00c896;
        color: white;
        border: none;
        border-radius: 0.4rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
      }

      button:hover {
        background-color: #00a77c;
      }


block content
  .container
    fieldset
        legend=error.message
        a(href="") Try again
        a(href=dismissUrl) Dismiss

